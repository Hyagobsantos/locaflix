<section class="h-100">
  <div class="container h-100">
    <div class="row justify-content-sm-center h-100">
      <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
        <div class="text-center my-5">
          <img src="<%= image_path('_abcdcf98-e7c4-4a74-8d74-f97c9baa47de.jpg') %>" alt="logo" width="100">
        </div>
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="mb-3">
                <%= f.label :email, class: "mb-2 text-muted", for:"email" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email", class: "form-control", required: "autofocus" %>
                <div class="invalid-feedback">
                  Email is invalid
                </div>
              </div>

              <div class="mb-3">
                <div class="mb-2 w-100">
                  <%= f.label :senha, class: "text-muted" %><br/>
                  <%= link_to "esqueceu sua senha?", new_password_path(resource_name), class:"float-end" %><br />
                </div>
                <%= f.password_field :password, autocomplete: "current-password", id: "password", type: "password", class: "form-control", require: true %>
                <div class="invalid-feedback">
                  Password is required
                </div>
              </div>

              <div class="d-flex align-items-center">
                <% if devise_mapping.rememberable? %>
                  <div class="form-check">
                    <%= f.check_box :remember_me, id:"remember", class: "form-check-input" %>
                    <%= f.label :lembrar, for:"remember",class:"form-check-label" %>
                  </div>
                <% end %>

                <%= f.submit "Login", class: "btn btn-primary ms-auto" %>
              </div>
            <% end %>
          </div>
          <div class="card-footer py-3 border-0">
            <div class="text-center">
              NÃ£o tem uma conta? <%= link_to "Criar Conta", new_registration_path(resource_name), class:"text-dark" %><br />
            </div>
          </div>
        </div>
        <div class="text-center mt-5 text-muted">
          Copyright &copy; 2022-2023 &mdash; LocaFlix
        </div>
      </div>
    </div>
  </div>
</section>

